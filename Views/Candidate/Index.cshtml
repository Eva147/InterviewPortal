@model List<InterviewPortal.Models.Position>

@section Styles {
    <link rel="stylesheet" href="~/css/candidate-dashboard.css" />
}

@{
    ViewData["Title"] = "Choose the position";
}

<div class="positions-container">
    <h1>Choose the position</h1>

    <div class="positions-list">
        @if (Model != null && Model.Any())
        {
            @foreach (var position in Model)
            {
                <a href="/Candidate/ApplyPosition/@position.Id" class="position-button">
                    <div class="position-title">@position.Name</div>
                </a>
            }
        }
        else
        {
            <div class="no-positions">
                <p>No open positions available at the moment.</p>
            </div>
        }
    </div>
</div>
